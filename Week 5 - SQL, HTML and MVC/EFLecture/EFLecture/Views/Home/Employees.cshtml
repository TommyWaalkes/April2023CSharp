@model List<Employee>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>All employees</h1>
@{
    foreach(Employee E in Model){
        <div>
            <h2>@E.Name</h2>
            <p>Role: @E.Role</p>
            <p>Salary: @E.Salary</p>
            <a asp-action="DeleteEmployee" asp-route-id="@E.Id">Delete</a>
        </div>
    }
}

<h2>Add employees (confirmation version)</h2>
<form asp-method="post" asp-action="Confirmation">
    <p>Enter their name</p>
    <input type="text" name="Name" />

    <p>Enter their Role</p>
    <input type="text" name="Role"/>

    <p>Enter their Salary</p>
    <input type="number" name="Salary" />

    <input type="submit" />
</form>

<h2>Add employees (redirect version)</h2>
<form asp-method="post" asp-action="AddEmployee">
    <p>Enter their name</p>
    <input type="text" name="Name" />

    <p>Enter their Role</p>
    <input type="text" name="Role" />

    <p>Enter their Salary</p>
    <input type="number" name="Salary" />

    <button type="submit">Add Employee</button>
</form>